<h1>User info</h1>
<div><%= image_tag current_user.get_profile_image(100, 100) %></div>
<div>name <%= current_user.name %></div>
<div>introducition <br>
  <%= current_user.introduction %>
</div>
<dir><%= link_to 'm', edit_user_path(current_user) %></dir>

 <h1>New book</h1>
<%= form_with model: Book.new do |f| %>
  <div>Title</div>
  <%= f.text_field :title %>
  <div>Opinion</div>
  <%= f.text_area :body %>
  <%= f.submit "Create Book" %>
<% end %>

<div>Books
<table>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <% books.each do |book| %>
        <td><%= image_tag book.get_profile_image(100, 100) %></td>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
      <% end %>
    </tr>
  </tbody>
</table>
</div>