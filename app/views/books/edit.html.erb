<div class="container">
  <div class="row">
    <div class="col-lg-4">
      <%= render 'users/userinfo', user: @user %>
    </div>
    
    </div>
    <div class="col-lg-8">
      <h1>Book detail</h1>
      <%= form_with model: @book do |f| %>
        <h4>Title</h4>
        <%= f.text_field :title %>
        <h4>Opinion</h4>
        <%= f.text_area :body %>
        <%= f.submit "Update", url: books_path, class:"btn btn-success", method: :patch %>
      <% end %>
    </div>
  </div>
</div>