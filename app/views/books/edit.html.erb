<div class="container">
  <div class="row">
    <div class="col-lg-4">
      <%= render 'users/userinfo' %>
    </div>

    <div class="edit_errors">
      <% if @book.errors.any? %>
        <p> <%= @book.errors.count %> errors prohibted this book from being saved:</p>
        <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      <% end %>
    </div>
    <div class="col-lg-8">
      <h1>Book detail</h1>
      <%= form_with model: @book do |f| %>
        <h4>Title</h4>
        <%= f.text_field :title %>
        <h4>Opinion</h4>
        <%= f.text_area :body %>
        <%= f.submit "変更を保存", url: books_path, class:"btn btn-success" method: :patch %>
      <% end %>
    </div>
  </div>
</div>