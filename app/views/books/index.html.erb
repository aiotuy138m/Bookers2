<div class="container">
  <div class="row">
    <div class="col-md-4">
      <%= render 'users/userinfo', user: @user %>
    </div>

    <div class="col-md-8">
      <h1>Books</h1>
      <table rules="rows" class="border-bottom">
      <tr class="border-bottom">
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
    <% @books.each do |books| %>
      <tr class="border-bottom">
      　<td>
      　  <%= link_to book_path(books.id) do %>
      　    <%= image_tag books.user.get_profile_image(100, 100) %>
      　 <% end %>
        </td>
        <td>
          <%= link_to book_path(books.id) do %>
            <%= books.title %>
          <% end %>
        </td>
        <td><%= books.body %></td>
      </tr>
    <% end %>
      </table>
    </div>
  </div>
</div>