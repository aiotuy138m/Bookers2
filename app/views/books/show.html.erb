<%= flash[:notice] %>
<div class="container">
  <div class="row">
    <div class="col-lg-4">
      <%= render 'users/userinfo', user: @user %>
    </div>

    <div class="col-lg-8">
      <h1>Book detail</h1>
      <table rules="rows">
      <tr>
        <td><%= image_tag @user.get_profile_image(100, 100) %>
          <p><%= @user.name %><p>
        </td>
        <td><%= @book.title %></td>
        <td><%= @book.body %></td>
        <% if current_user %>
          <td><%= link_to "Edit", edit_book_path(@book), class:"btn btn-success" %></td>
          <td><%= link_to "Delete", book_path(@book),"data-confirm" => "本当に削除しますか？" , class:"btn btn-danger", method: :delete %></td>
        <% end %>
      </tr>
      </table>
</div>
