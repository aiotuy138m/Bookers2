<div class="col-lg-8 my-2">
  <h1>User info</h1>
    <div><%= image_tag user.get_profile_image(200, 200) %></div>
  <table>
    <tr class="border-bottom">
      <th>name</th>
      <td><%= user.name %></td>
    </tr>
    <tr class="border-bottom">
      <th>introduction<th>
      <td class="p-2"><%= user.introduction %></td>
    </tr>
  </table>
  <div class="my-3">
    <%= link_to edit_user_path(current_user), class: "col-lg btn btn-secondary" do %>
      <i class="fas fa-user-cog"></i>
    <% end %>
  </div>

  <div class="my-5">
<!-- ここにエラー文 -->
    <h1>New book</h1>
      <%= form_with model: Book.new do |f| %>
        <div>Title</div>
        <%= f.text_field :title %>
        <div>Opinion</div>
        <%= f.text_area :body %>
        <%= f.submit "Create Book", class:"btn btn-success" %>
      <% end %>
  </div>
</div>