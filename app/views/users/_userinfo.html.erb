<div class="col-lg-8">
  <h1>User info</h1>
    <div><%= image_tag current_user.get_profile_image(100, 100) %></div>
  <table>
    <tr>
      <th>name</th>
      <td><%= current_user.name %></td>
    </tr>
    <tr>
      <th>introduction<th>
      <td><%= current_user.introduction %></td>
    </tr>
  </table>
    <%= link_to edit_user_path(current_user), class: "col-lg btn btn-secondary" do %>
      <i class="fas fa-user-cog"></i>
    <% end %>

  <h1>New book</h1>
    <%= form_with model: Book.new do |f| %>
      <div>Title</div>
      <%= f.text_field :title %>
      <div>Opinion</div>
      <%= f.text_area :body %>
      <%= f.submit "Create Book" %>
    <% end %>
</div>