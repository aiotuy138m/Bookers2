<div>
  <% if @book.errors.any? %>
  <%= @book.errors.count %> errors prohibited this obj from being saved:
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
</div>
<div class="my-2">
  <h1>User info</h1>
    <div><%= image_tag user.get_profile_image(200, 200) %></div>
  <table>
    <tr class="border-bottom">
      <th class="p-2">name</th>
      <td class="p-2"><%= user.name %></td>
    </tr>
    <tr class="border-bottom">
      <th class="p-2">introduction<th>
      <td class="p-2"><%= user.introduction %></td>
    </tr>
  </table>
  <div class="my-2">
    <%= link_to edit_user_path(current_user), class: "col-8 btn btn-ligth btn-outline-secondary" do %>
      <i class="fas fa-user-cog"></i>
    <% end %>
  </div>

  <div class="my-5">
    <h1>New book</h1>
      <%= form_with model: Book.new do |f| %>
        <div>Title</div>
        <%= f.text_field :title %>
        <div>Opinion</div>
        <%= f.text_area :body %>
        <div><%= f.submit "Create Book", class:"btn btn-success" %></div>
      <% end %>
  </div>
</div>