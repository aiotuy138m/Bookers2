<div class="container">
  <div class="row">
    <div class= "col-md-4">
      <%= render 'userinfo', user: @user %>
    </div>

  <div class= "col-md-8">
    <h1>Users</h1>
    <table rules="rows">
    <tr>
      <th>image</th>
      <th>name</th>
      <th>introduction</th>
    </tr>
    <% @users.each do |user| %>
    <tr>
      <td><%= image_tag user.get_profile_image(100, 100) %></td>
      <td><%= user.name %></td>
      <td><%= user.introduction %></td>
      <td><%= link_to "show", user_path(user) %></td>
    </tr>
    <% end %>
    </table>
  </div>
</div>