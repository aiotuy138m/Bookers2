<div class="container">
 <div class="row">
  <div class="col-lg-4 center-block">
    <%= render 'userinfo', user: @user%>
  </div>

  <div class="col-lg-8">
    <h4>Books</h4>
    <table>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
      <% @books.each do |books| %>
        <tr>
          <td><%= image_tag books.user.get_profile_image(100, 100) %></td>
          <td><%= books.title %></td>
          <td><%= books.body %></td>
        </tr>
      <% end %>
      </table>
    </div>
  </div>
</div>